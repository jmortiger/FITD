# http://editorconfig.org

root = true

[*]
tab_width = 4
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
spelling_language = en-US

[*.{c,h,cpp,hpp,cc,hh,inl,m,mm,rc}]
indent_style = tab
indent_size = 4
end_of_line = lf

[{CMakeLists.txt,*.cmake}]
indent_style = tab
indent_size = 4
end_of_line = lf
